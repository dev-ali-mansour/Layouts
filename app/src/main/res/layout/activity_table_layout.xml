<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="Open"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:padding="3dp"
            android:text="Ctrl + O"
            android:textSize="25sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="Save"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:padding="3dp"
            android:text="Ctrl + S"
            android:textSize="25sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="Save As"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:padding="3dp"
            android:text="Ctrl + Shift + S"
            android:textSize="25sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:text="X"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:padding="3dp"
            android:text="Import"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:padding="3dp"
            android:text="Ctrl + I"
            android:textSize="25sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:text="X"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView

            android:padding="3dp"
            android:text="Export"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:padding="3dp"
            android:text="Ctrl + E"
            android:textSize="25sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="Exit"
            android:textSize="25sp"
            android:textStyle="bold" />

    </TableRow>

</TableLayout>